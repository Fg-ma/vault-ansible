#include <tunables/global>

## ============================================================================
## AppArmor Profile for: {{ vault_dir }}/bin/vault
## Last validated: 2025-07-02
## System: Debian 12
## Purpose: Confinement of Vault server binary
## Mode: enforce (switch to `flags=(complain)` during testing)
## ============================================================================

{{ vault_dir }}/bin/vault {
  ## ─── Capabilities ─────────────────────────────────────────────
  capability setgid,
  capability setuid,
  capability dac_override,
  capability chown,
  capability sys_admin,
  capability audit_write,

  ## ─── Network ──────────────────────────────────────────────────
  network inet stream,
  network inet6 stream,
  network inet dgram,
  network inet6 dgram,
  network netlink raw,
  unix (send, receive) type=stream,
  unix (create, send, receive) type=dgram,
  signal (send, receive) peer={{ vault_dir }}/bin/vault,
  signal receive set=(term,kill,cont,stop,hup,int,usr1,usr2,exists) peer=unconfined,

  ## ─── Dev nodes ───────────────────────────────────────────────
  /dev/urandom r,
  /dev/null rw,
  /dev/tty rw,

  ## ─── Configuration & Data ─────────────────────────────────────
  {{ vault_dir }}/bin/vault rix,
  {{ vault_dir }}/ rw,
  {{ vault_dir }}/** rwk,

  ## ─── TLS & Certificates ──────────────────────────────────────
  /etc/ssl/ r,
  /etc/ssl/** r,
  /usr/share/ca-certificates/ r,
  /usr/share/ca-certificates/** r,

  ## ─── Logging ──────────────────────────────────────────────────
  /var/log/vault/ rw,
  /var/log/vault/** rwk,

  ## ─── System Info: Proc/Sys ────────────────────────────────────
  /proc/stat r,
  /proc/*/status r,
  /proc/*/stat r,
  /proc/*/cmdline r,
  /proc/*/task/** r,
  /proc/meminfo r,
  /proc/cpuinfo r,
  /proc/sys/kernel/random/boot_id r,
  /proc/sys/vm/overcommit_memory r,
  /sys/kernel/mm/transparent_hugepage/hpage_pmd_size r,

  ## ─── Time Zone & Resolver ─────────────────────────────────────
  /etc/host.conf r,  
  /etc/hosts r,
  /etc/nsswitch.conf r,
  /etc/resolv.conf r,
  /usr/share/zoneinfo/** r,
}
